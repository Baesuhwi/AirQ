<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yjc.airq.mapper.MemberMapper">
	<select id="getMemberList" resultType="com.yjc.airq.domain.MemberVO">
		select * from member
	</select>
	<select id="login" resultType="com.yjc.airq.domain.MemberVO">
		select * from member where id = #{id} and password = #{password}
	</select>
	
	<!-- 회원 목록 -->
	<select id="memberList" resultType="com.yjc.airq.domain.MemberVO">
		select * from member
	</select>
	
	<!-- 판매자 회원 목록 -->
	<select id="sellerList" resultType="com.yjc.airq.domain.SellerVO">
		insert into sellertest(bnumber) values(#{bnumber})
	</select>
	
	<!-- 회원 가입 -->
	<select id="signup" resultType="com.yjc.airq.domain.MemberVO">
		insert into member(id, password, name, email, tel, address) values(#{id}, #{password}, #{name}, #{email}, #{tel}, #{address})
	</select>
	
	<!-- 회원 중복 체크 -->
	<select id="idCheck" resultType="com.yjc.airq.domain.MemberVO">
 		select id from member where id = #{id}
	</select>
	
	<!-- 파일 업로드 -->
	<select id="fileDB" resultType="com.yjc.airq.domain.FileTestVO">
		insert into FILETEST(FILENAME, ORINAME, PATH) values(#{filename}, #{oriname}, #{path})
	</select>
</mapper>